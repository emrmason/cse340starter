<% if(title){ %> <h1><%= title %></h1> <%} else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %> <ul class="message warning"> <% errors.array().forEach(error => { %> <li><%= error.msg %></li> <% }) %> </ul> <% } %>


<section class="form-container">
    <p><b>All fields are required.</b></p>
    <form class="form" id="partsUpdate" action="/parts/update" method ="post">
        <label for="part_name">Part Name:</label>
        <input type="character varying" class="form-field" name="part_name" required value="<%= locals.part_name %>">
        <label for="part_description">Description:</label>
        <input type="text" class="form-field" name="part_description" required value="<%= locals.part_description %>">
        <label for="part_image">Full Image File Path:</label>
        <input type="character varying" class="form-field" name="part_image" required placeholder="Example: /images/parts/name.jpg" value="<%= locals.part_image %>">
        <label for="part_thumbnail">Thumbnail Image File path:</label>
        <input type="character varying" class="form-field" name="part_thumbnail" required placeholder="Example: /images/parts/name-tn.jpg" value="<%= locals.part_thumbnail %>">
        <label for="part_price">Price (numbers only):</label>
        <input type="integer" class="form-field" name="part_price" required value="<%= locals.part_price %>"><br>
        <hr>
        <input type="submit" class="form-button" name="submit" disabled>Update Part</input>
    </form>
</section>

<script src="../../js/update.js"></script>