<% if(title){ %>
    <h1><%= title %></h1>
<%} else {
    res.redirect('/')
} %>

<%- messages() %>

<section class="form-container">
    <p><b>All fields are required.</b></p>
    <form class="form" action="/inv/add-inventory" method ="post">
        <label for="inv_make">Make:</label>
        <input type="character varying" class="form-field" id="inv_make" required placeholder="Ford" value="<%= locals.inv_make %>">
        <label for="inv_model">Model:</label>
        <input type="character varying" class="form-field" id="inv_model" required placeholder="Focus" value="<%= locals.inv_model %>">
        <label for="inv_year">Year:</label>
        <input type="character" class="form-field" id="inv_year" required placeholder="1997" value="<%= locals.inv_year %>">
        <label for="inv_description">Description:</label>
        <input type="text" class="form-field" name="inv_description" required placeholder="A brief description of the vehicle" value="<%= locals.inv_description %>">
        <label for="inv_image">Full Image File Path:</label>
        <input type="character varying" class="form-field" name="inv_image" required placeholder="/images/vehicles/model.jpg" value="<%= locals.inv_image %>">
        <label for="inv_thumbnail">Thumbnail Image File path:</label>
        <input type="character varying" class="form-field" name="inv_thumbnail" required placeholder="/images/vehicles/model-tn.jpg" value="<%= locals.inv_thumbnail %>">
        <label for="inv_price">Price (numbers only):</label>
        <input type="number" class="form-field" name="inv_price" required placeholder="23500" value="<%= locals.inv_price %>">
        <label for="inv_miles">Miles (numbers only):</label>
        <input type="integer" class="form-field" name="inv_miles" required placeholder="157800" value="<%= locals.inv_miles %>">
        <label for="inv_color">Color:</label>
        <input type="character" class="form-field" name="inv_color" required placeholder="Silver" value="<%= locals.inv_color %>">
        <label for="classification_id">Classification:</label>
        <select class="dropdown-1" name = "classification_id" id="classification_id">
        <%- options %>
        </select><br><br> 
        <hr>
        <button type="submit" class="form-button" name="add-inventory">Add</button>
    </form>
</section>
