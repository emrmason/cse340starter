<% if(title){ %> <h1><%= title %></h1> <%} else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %> <ul class="message warning"> <% errors.array().forEach(error => { %> <li><%= error.msg %></li> <% }) %> </ul> <% } %>


<section class="form-container">
    <p><b>Confirm Deletion - this action is permanent.</b></p>
    <form class="form" id="deleteForm" action="/inv/delete" method ="post">
        <label for="inv_make">Make:</label>
        <input type="character varying" class="form-field" name="inv_make" readonly value="<%= locals.inv_make %>">
        <label for="inv_model">Model:</label>
        <input type="character varying" class="form-field" name="inv_model" readonly value="<%= locals.inv_model %>">
        <label for="inv_year">Year:</label>
        <input type="character" class="form-field" name="inv_year" readonly value="<%= locals.inv_year %>">
        <label for="inv_price">Price:</label>
        <input type="integer" class="form-field" name="inv_price" readonly value="<%= locals.inv_price %>">
        <br><br> 
        <hr>
        <button type="submit" class="form-button" name="submit">Remove Vehicle</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=locals.inv_id %>"<% } %>>
    </form>
</section>
